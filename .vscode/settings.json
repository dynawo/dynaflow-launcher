{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "editor.formatOnSave": false,
    "cmake.configureOnOpen": true,

    "[diff]": {
        "files.trimTrailingWhitespace": false
    },

    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build-code/build/dynaflow-launcher/${buildType}",

    "cmake.configureSettings": {
        "DYNAWO_HOME": "${workspaceFolder}/../dynawo/build-code/deploy/${buildType}/dynawo",
        "DYNAWO_ALGORITHMS_HOME": "${workspaceFolder}/../dynawo-algorithms/build-code/deploy/${buildType}/dynawo-algorithms",
        "DYNAFLOW_LAUNCHER_HOME": "${workspaceFolder}",

        "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/build-code/install/dynaflow-launcher/${buildType}",

        "DYNAFLOW_LAUNCHER_USE_DOXYGEN": "OFF",
        "GTEST_ROOT": "${workspaceFolder}/../dynawo/build-code/deploy/Debug/dynawo",
        "GMOCK_HOME": "${workspaceFolder}/../dynawo/build-code/deploy/Debug/dynawo",
        "USE_MPI": "YES"
    },

    "files.exclude": {
        "build-code": true,
    },

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "build-code": true,
        "build-clion": true,
        "install-clion": true
      }
}
